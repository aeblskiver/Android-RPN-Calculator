<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.fullerton.ecs.reversepolishnotation.CalculatorActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/inputNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />


        <TextView
            android:id="@+id/stack0TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />
        <TextView
            android:id="@+id/stack1TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/stack0TextView" />
        <TextView
            android:id="@+id/stack2TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/stack1TextView"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/stack3TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/stack2TextView"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>



    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="4"
        android:rowCount="5"
        android:useDefaultMargins="true"
        android:layout_gravity="fill_horizontal"
        >

        <ImageButton
            android:id="@+id/buttonDelete"
            android:layout_width="0dp"
            android:layout_gravity="fill_horizontal|top|left"
            android:scaleType="fitCenter"
            android:backgroundTint="@color/colorPrimaryDark"
            app:srcCompat="@android:drawable/ic_input_delete" />
        <Button
            android:id="@+id/buttonDrop"
            android:layout_gravity="top|left"
            android:text="Drop"/>
        <Button
            android:id="@+id/buttonIDK"
            android:layout_gravity="top|left"
            android:text="%"
            android:visibility="gone"/>
        <Button
            android:id="@+id/buttonDiv"
            android:layout_gravity="top|left"
            android:text="/"/>
        <Button
            android:id="@+id/button7"
            android:layout_gravity="top|left"
            android:text="7" />
        <Button
            android:id="@+id/button8"
            android:layout_gravity="top|left"
            android:text="8"/>
        <Button
            android:id="@+id/button9"
            android:layout_gravity="top|left"
            android:text="9"/>
        <Button
            android:id="@+id/buttonMult"
            android:layout_gravity="top|left"
            android:text="*"/>
        <Button
            android:id="@+id/button4"
            android:layout_gravity="top|left"
            android:text="4"/>
        <Button
            android:id="@+id/button5"
            android:layout_gravity="top|left"
            android:text="5"/>
        <Button
            android:id="@+id/button6"
            android:layout_gravity="top|left"
            android:text="6"/>
        <Button
            android:id="@+id/buttonSub"
            android:layout_gravity="top|left"
            android:text="-"/>
        <Button
            android:id="@+id/button1"
            android:layout_gravity="top|left"
            android:text="1"/>
        <Button
            android:id="@+id/button2"
            android:layout_gravity="top|left"
            android:text="2"/>
        <Button
            android:id="@+id/button3"
            android:layout_gravity="top|left"
            android:text="3"/>
        <Button
            android:id="@+id/buttonAdd"
            android:layout_gravity="top|left"
            android:text="+"/>
        <Button
            android:id="@+id/buttonDecimal"
            android:layout_gravity="top|left"
            android:text="."/>
        <Button
            android:id="@+id/button0"
            android:layout_gravity="top|left"
            android:text="0"/>

        <Button
            android:id="@+id/buttonEnter"
            android:layout_columnSpan="2"
            android:layout_gravity="top|left|fill_horizontal"
            android:text="ENTER" />
    </GridLayout>
</LinearLayout>
